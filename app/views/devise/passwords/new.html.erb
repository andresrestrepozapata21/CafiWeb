<div class="row">
  <div class="columns large-12 ">
        <%= image_tag "farmacenter-logo.png", :class => "logo"%>
  </div>
</div>

<div class="row align center">
  <div class = "columns large-4"> </div>
  <div class="columns text-center large-4"> <h2>¿Olvisdaste tu Contraseña?</h2> </div>
  <div class="columns large-4"> </div> 
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

<div class="row"> 
 <div class="columns large-4"> </div>

 <div class="columns large-4">

  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "enviarme instrucciones para recuperar contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
 </div>

 <div class="columns large 4">  </div>

</div>