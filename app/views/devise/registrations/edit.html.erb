<div class="columns large-6">

    <h2>Editar <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
  <div class="columns large-6">

    <div class="field">
    <%= f.label :name, "Nombre" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone, "Telefono" %><br />
    <%= f.text_field :phone, autofocus: true %>
  </div>

  </div>

  <div class="columns large-6">
    <div class="field">
    <%= f.label :document, "Documentos" %><br />
    <%= f.text_field :document %>
  </div>


  <div class="field">
    <%= f.label :address, "Direcci칩n" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
  
  </div>

</div>
  
  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Nueva Contrase침a" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar Nueva Contrase침a" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Contrase침a Actual" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="columns large-7">
    <div class="actions">
      <%= f.submit "Actualizar" %>
    </div>
  <% end %> 
  </div>
</div>
    

  <div class="columns text-center large-6">
   
   <h3>Cancelar Mi Cuenta</h3>

<p>No estas feliz? <%= button_to "Cancelar Mi Cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "atras", :back %>
  </div>



   






