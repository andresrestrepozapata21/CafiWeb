<div class="row">
  <div class="columns large-12 ">
        <%= image_tag "farmacenter-logo.png", :class => "logo"%>
  </div>
</div>
  
<div class="row align center">
  <div class = "columns large-4"> </div>
  <div class="columns text-center large-4"> <h2>Iniciar Sesión</h2> </div>
  <div class="columns large-4"> </div> 
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row"> 
 <div class="columns large-4"> </div>

 <div class="columns large-4">

  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recuerdarme" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "iniciar Sesión" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
 </div>

 <div class="columns large 4">  </div>

</div>
  

  
