<div class="row align-middle title_compras">
  <div class="columns text-right large-5" style="padding-bottom: 10px; color: green;">
    <i class="fa fa-shopping-bag fa-3x"></i>
  </div>
  <div class="columns large-4 titulo_compras"> 
    <h2>Compras</h2> 
  </div>
</div>
 
<div class="row">
  <div class="columns large-12">
    <table>
      <thead>
        <tr>
          <th>Precio</th>
          <th>Tiempo</th>
          <th>Cliente</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @purchases.each do |purchase| %>
          <tr>
            <td><%= purchase.price %></td>
            <td><%= purchase.time %></td>
            <td><%= User.find(purchase.user_id).email %></td>
            <% if current_user.has_role? :admin %>
              <td><%= link_to 'editar', edit_purchase_path(purchase), :class => "clear button success"  %></td>
              <td><%= link_to 'eliminar', purchase, method: :delete, data: { confirm: 'Are you sure?' }, :class => "clear button alert" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>
<div class="row">
  <div class="columns text-center large-12">
    <% if current_user.has_role? :admin %>
      <%= link_to 'New Purchase', new_purchase_path, :class => "hollow button success" %>
    <% end %>    
  </div>
</div>
