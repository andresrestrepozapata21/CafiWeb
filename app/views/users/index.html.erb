            <td><%= user.phone %></td>
            <td><%= user.address %></td>
            <td><%= user.email %></td>
            <td><%= user.money_amount %></td>
            <td><%= user.money_amount %></td>
            <td><%= link_to 'Compras', purchases_path(client: user), :class => "clear button success" %></td>
