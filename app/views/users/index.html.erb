          </tr>
        <% end %>
      <% else %>
        <tr>
          <td><%= @users.document %></td>
          <td><%= @users.name %></td>
          <td><%= @users.phone %></td>
          <td><%= @users.address %></td>
          <td><%= @users.email %></td>
          <td><%= link_to 'Compras', purchases_path(client: user) %></td>
          <td><%= @users.money_amount %></td>
        </tr>
      <% end %>
