<div class="row align-middle title_usuarios">
  <div class="columns text-right large-5" style="padding-bottom: 10px; color: green;">
    <i class="fa fa-users fa-3x"></i>
  </div>
  <div class="columns large-4 titulo_usuarios"> 
    <h2>Usuarios</h2> 
  </div>
</div>
<div class="row">
  <div class="columns large-12">
    <table>
      <thead>
        <tr>
          <th>Documento</th>
          <th>Nombre</th>
          <th>Telefono</th>
          <th>Direcci√≥n</th>
          <th>Email</th>
          <th>Monto</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.document %></td>
            <td><%= user.name %></td>
            <td><%= user.phone %></td>
            <td><%= user.address %></td>
            <td><%= user.email %></td>
            <td><%= user.money_amount %></td>
            <td><%= link_to 'Edit', edit_user_path(user), :class =>"clear button success" %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"clear button alert" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

