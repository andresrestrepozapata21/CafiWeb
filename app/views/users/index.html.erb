<%= form_with url: search_path, local: true, method: :get do |form| %>
  <strong>Filtrar</strong>
  <%= form.text_field :q, placeholder: "Correo", data: {behavior: "autocomplete"}%>
  <%= form.button "Buscar" %>
<% end %>
<div class="row align-middle title_usuarios">
  <div class="columns text-right large-5" style="padding-bottom: 10px; color: green;">
    <i class="fa fa-users fa-3x"></i>
  </div>
  <div class="columns large-4 titulo_usuarios"> 
    <h2>Usuarios</h2> 
  </div>
</div>
<div class="row">
  <div class="columns large-12">
    <table>
      <thead>
        <tr>
          <th>Documento</th>
          <th>Nombre</th>
          <th>Telefono</th>
          <th>Direcci√≥n</th>
          <th>Email</th>
          <th>Deuda Total</th>
          <th>Monto Maximo</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>

      <tbody>
      <% if @one %>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.document %></td>
